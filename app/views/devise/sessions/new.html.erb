
<div class="row">
	<div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "well" }) do |f| %>

			<fieldset>
				<legend>Sign In</legend>
				<div><%= f.input :email %></div>
		  	<div><%= f.input :password %></div>
			</fieldset>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input :remember_me, as: :boolean %></div>
		  <% end -%>

		  <div><%= f.button :submit, "Sign in" %></div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>

	<div class="span8">
		<h3>Mark 5:19</h3>
		<h5>{ Jesus didn't allow the man to go. He said, “Go home to your family and friends. Tell them about all that the Lord did for you. Tell them how the Lord was good to you.” }</h5>
		<hr>
	</div>

</div>
