<div class="page-header">
	<h1><%= @user.full_name %></h1>
	<%= image_tag @user.gravatar_url %>
	<%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: 'btn' %>
</div>

<% if @testimonies %>
	<% @testimonies.each do |testimony| %>
		<div class="well">
			<%= testimony.content %>
			<br />
			<%= link_to time_ago_in_words(testimony.created_at), testimony_path(testimony) %> ago
		</div>
	<% end %>	
<% end %>	